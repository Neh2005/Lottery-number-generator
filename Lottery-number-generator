<script>
	var r;
function rollNumber(){
	var set = [];
	while(set.length < 1){
	    r = Math.floor(Math.random()*58) + 1;
		if(set.indexOf(r) === -1) set.push(r);
	}
    console.log("The winner is"+" "+r)
	displayResult(set);
}
 
 
function displayResult(set){ 
	document.getElementById('numbers').innerHTML="<center><h1 class='text-danger'>"+set+"</h1></center>";
    document.querySelector('.modal-body').innerHTML = "<p>The winning number is: " + r + "</p>";
}
</script>
